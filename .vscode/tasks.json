{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "msbuild",
            "args": ["/t:Build"],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Test",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "msbuild",
            "args": ["/t:Test"],
        },
        {
            "label": "Clean",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "command": "msbuild",
            "args": ["/t:CleanAll"],
        }
    ]
}